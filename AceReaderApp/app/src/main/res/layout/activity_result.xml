<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="appfactory.app.com.acereaderapp.ResultActivity">

    <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_loading_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@color/red"
        app:mainColor="@color/button_material_dark"
        app:secondaryColor="@color/accent_material_light"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_again"
        android:textSize="35sp"
        android:padding="20dp"
        android:id="@+id/playAgain"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/accent_material_light"
        android:layout_marginEnd="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/circle_loading_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="35sp"
        android:padding="20dp"
        android:id="@+id/Home"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/accent_material_light"
        android:layout_alignTop="@+id/playAgain"
        android:layout_alignParentStart="true" />

</RelativeLayout>
